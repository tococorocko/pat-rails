    <%= t("about_us.paragraph_2_html") %>
    <h3 class="subtitle"><%= t("about_us.subtitle_3") %></h3>
    <%= t("about_us.paragraph_3_html") %>
    <h3 class="subtitle"><%= t("about_us.subtitle_4") %></h3>
    <%= t("about_us.paragraph_4_html") %>
    <h3 class="subtitle"><%= t("about_us.subtitle_5") %></h3>
    <%= t("about_us.paragraph_5_html") %>
