    <div class="card">
      <div class="card-body">
        <div class="svg-pat-logo"></div>
        <h6 class="card-subtitle mb-2 text-muted"><%= t("pat_address") %></h6>
        <p class="card-subtitle mb-2 text-muted"><%= t("pat_address_additional_1") %><br><%= t("pat_address_additional_2") %></p>
        <div>
          <p class="card-text">via Soldini 25</p>
          <p class="card-text">6830 Chiasso</p>
        </div>
        <hr class="sm">
        <div>
          <%= link_to "tel:0041793753791", target: "_blank" do %>
            <i class="fas fa-phone-alt"></i>+41 79 375 37 91
          <% end %>
          <%= link_to "mailto:info@pat-ti.ch", target: "_blank" do %>
            <i class="fas fa-envelope"></i>info@pat-ti.ch
          <% end %>
          <%= link_to "https://www.pat-ti.ch", target: "_blank" do %>
            <i class="fas fa-link"></i>https://www.pat-ti.ch
          <% end %>
        </div>
      </div>
    </div>
  </div>
