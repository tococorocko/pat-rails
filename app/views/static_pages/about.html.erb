<% page_heading(t("about_us.head_title")) %>

<div id="main">
  <div class="header-logo">
    <div class="logo-ti selected">
      <%= image_tag("logo-apg.png", alt:"Logo PAT Imparo con i genitori Ticino", class: "logo-link") %>
      <span class="logo-link-text">PAT Imparo con i genitori Ticino</span>
    </div>
  </div>
  <div class="close-btn">
    <%= link_to "", root_path, class:"close" %>
  </div>
  <div id="about">
    <h2 class="major"><%= t("about_us.title") %></h2>
    <h3><%= t("about_us.head_title") %></h3>
    <%= t("about_us.paragraph_1_html") %>
